{
  "name": "@my-app/backend",
  "version": "1.0.0",
  "description": "Express.js API backend",
  "main": "dist/host/Server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/host/Server.js",
    "dev": "nodemon src/host/Server.ts",
    "dev:legacy": "nodemon src/server.ts",
    "clean": "rm -rf dist",
    "seed": "npx ts-node --transpile-only --require=reflect-metadata src/infrastructure/persistence/seeds/seed.ts",
    "seed:legacy": "npx tsx prisma/seeds/seed.ts",
    "seed:users": "npx ts-node --transpile-only --require=reflect-metadata src/infrastructure/persistence/seeds/seed.ts --domain=user",
    "seed:products": "npx ts-node --transpile-only --require=reflect-metadata src/infrastructure/persistence/seeds/seed.ts --domain=product",
    "seed:inventory": "npx ts-node --transpile-only --require=reflect-metadata src/infrastructure/persistence/seeds/seed.ts --domain=inventory",
    "seed:warehouses": "npx ts-node --transpile-only --require=reflect-metadata src/infrastructure/persistence/seeds/seed.ts --domain=warehouse",
    "seed:reset": "npx prisma migrate reset --force && npm run seed",
    "docs:generate": "npm run build && node -e \"const app = require('./dist/host/App.js').default; const swaggerSpec = require('./dist/config/swagger.js').swaggerSpec; const fs = require('fs'); fs.writeFileSync('api-docs.json', JSON.stringify(swaggerSpec, null, 2)); console.log('OpenAPI spec generated: api-docs.json');\"",
    "docs:validate": "swagger-codegen validate -i ./api-docs.json || echo 'Consider installing swagger-codegen for validation'",
    "validate:schema": "npx tsx scripts/validation/validate-schema.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "jest --coverage --watchAll=false --ci",
    "test:db": "npm run validate:schema",
    "verify:api": "node scripts/api-verification.js",
    "verify:performance": "node scripts/performance-test.js",
    "verify:all": "npm run verify:api && npm run verify:performance",
    "migration:create": "npx prisma migrate dev --schema=src/infrastructure/persistence/prisma/schema.prisma",
    "migration:deploy": "npx prisma migrate deploy --schema=src/infrastructure/persistence/prisma/schema.prisma",
    "db:generate": "npx prisma generate --schema=src/infrastructure/persistence/prisma/schema.prisma",
    "db:studio": "npx prisma studio --schema=src/infrastructure/persistence/prisma/schema.prisma",
    "db:reset": "npx prisma migrate reset --force --schema=src/infrastructure/persistence/prisma/schema.prisma"
  },
  "prisma": {
    "schema": "src/infrastructure/persistence/prisma/schema.prisma"
  },
  "dependencies": {
    "@my-app/shared": "file:../shared",
    "@prisma/client": "^6.15.0",
    "@types/joi": "^17.2.2",
    "@types/multer": "^2.0.0",
    "@types/node-fetch": "^2.6.13",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/winston": "^2.4.4",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "helmet": "^7.0.0",
    "inversify": "^7.10.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "prisma": "^6.15.0",
    "reflect-metadata": "^0.1.14",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/bcryptjs": "^2.4.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.8",
    "jest": "^30.1.3",
    "nodemon": "^3.0.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
