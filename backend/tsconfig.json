{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "paths": {
      "@shared": ["../../shared/src/index.ts"],
      "@shared/*": ["../../shared/dist/*"],
      "@core/*": ["core/*"],
      "@infrastructure/*": ["infrastructure/*"],
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@di/*": ["di/*"],
      "@legacy": ["legacy-imports"]
    }
  },
  "include": [
    "src/**/*",
    "prisma/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "prisma/seeds",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}