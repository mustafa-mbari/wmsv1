{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
  // removed rootDir to allow imports from shared/src
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
        "baseUrl": ".",
        "paths": {
          "@shared": ["../shared/src/index.ts"],
          "@shared/*": ["../shared/dist/*"]
        }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}